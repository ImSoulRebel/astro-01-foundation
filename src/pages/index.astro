---
import MainLayout from "../layouts/MainLayout.astro";

// Server Only - solo en proceso de construcción
const name = "Chrystian Alvarez";
---

<MainLayout title="Home Page">
  <h1>{name}</h1>
  <p>Momento actual : {new Date().toLocaleTimeString()}</p>
  <p id="current-time">Momento actual real:</p>
  <footer>Año: 2023</footer>

  <script>
    // Client Only - Código propio de Javascript para hacer actualización de nuestro DOM

    const footer = document.querySelector("footer") as HTMLElement;
    const currentTimeparagraph = document.querySelector(
      "#current-time"
    ) as HTMLParagraphElement;

    const currentYear: number = new Date().getFullYear();
    const currentTime: string = new Date().toLocaleTimeString();

    footer.innerText = `año: ${currentYear}`;
    currentTimeparagraph.innerText = `Momento actual real: ${currentTime}`;
  </script>
</MainLayout>
